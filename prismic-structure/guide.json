{
  "id": "guide",
  "name": "Guide",
  "description": "Guide articles with rich content and SEO",
  "icon": "book",
  "tabs": [
    {
      "key": "content",
      "displayName": "Content"
    },
    {
      "key": "seo",
      "displayName": "SEO"
    },
    {
      "key": "settings",
      "displayName": "Settings"
    }
  ],
  "fields": [
    {
      "id": "title",
      "name": "Title",
      "type": "Text",
      "config": {
        "label": "Guide Title",
        "placeholder": "How to Write the Perfect Quote"
      }
    },
    {
      "id": "slug",
      "name": "Slug",
      "type": "UID",
      "config": {
        "label": "URL Slug",
        "placeholder": "how-to-write-perfect-quote"
      }
    },
    {
      "id": "excerpt",
      "name": "Excerpt",
      "type": "Text",
      "config": {
        "label": "Short Description",
        "placeholder": "Brief description of the guide"
      }
    },
    {
      "id": "featured_image",
      "name": "Featured Image",
      "type": "Image",
      "config": {
        "label": "Featured Image",
        "constraint": {
          "width": 800,
          "height": 600
        },
        "thumbnails": [
          {
            "name": "card",
            "width": 400,
            "height": 300
          },
          {
            "name": "mobile",
            "width": 600,
            "height": 400
          }
        ]
      }
    },
    {
      "id": "author",
      "name": "Author",
      "type": "Text",
      "config": {
        "label": "Author Name",
        "placeholder": "Tilbudsskabelon Team"
      }
    },
    {
      "id": "publish_date",
      "name": "Publish Date",
      "type": "Date",
      "config": {
        "label": "Publish Date"
      }
    },
    {
      "id": "last_updated",
      "name": "Last Updated",
      "type": "Date",
      "config": {
        "label": "Last Updated"
      }
    },
    {
      "id": "reading_time",
      "name": "Reading Time",
      "type": "Number",
      "config": {
        "label": "Reading Time (minutes)",
        "placeholder": "5"
      }
    },
    {
      "id": "difficulty_level",
      "name": "Difficulty Level",
      "type": "Select",
      "config": {
        "label": "Difficulty Level",
        "options": [
          {
            "value": "beginner",
            "label": "Beginner"
          },
          {
            "value": "intermediate",
            "label": "Intermediate"
          },
          {
            "value": "advanced",
            "label": "Advanced"
          }
        ],
        "default_value": "beginner"
      }
    },
    {
      "id": "category",
      "name": "Category",
      "type": "Select",
      "config": {
        "label": "Category",
        "options": [
          {
            "value": "quote-writing",
            "label": "Quote Writing"
          },
          {
            "value": "business-tips",
            "label": "Business Tips"
          },
          {
            "value": "templates",
            "label": "Templates"
          },
          {
            "value": "pricing",
            "label": "Pricing"
          },
          {
            "value": "customer-service",
            "label": "Customer Service"
          },
          {
            "value": "marketing",
            "label": "Marketing"
          }
        ],
        "default_value": "quote-writing"
      }
    },
    {
      "id": "tags",
      "name": "Tags",
      "type": "Text",
      "config": {
        "label": "Tags",
        "placeholder": "quote, template, business, tips"
      }
    },
    {
      "id": "content",
      "name": "Content",
      "type": "Group",
      "config": {
        "label": "Guide Content",
        "fields": [
          {
            "id": "introduction",
            "name": "Introduction",
            "type": "StructuredText",
            "config": {
              "label": "Introduction",
              "single": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
            }
          },
          {
            "id": "sections",
            "name": "Sections",
            "type": "SliceZone",
            "config": {
              "label": "Content Sections",
              "choices": {
                "text_section": {
                  "type": "Slice",
                  "fieldset": "Text Section",
                  "description": "Rich text section with heading",
                  "icon": "format_align_left",
                  "display": "list",
                  "non-repeat": {
                    "heading": {
                      "type": "Text",
                      "config": {
                        "label": "Section Heading",
                        "placeholder": "Section Title"
                      }
                    },
                    "content": {
                      "type": "StructuredText",
                      "config": {
                        "label": "Content",
                        "single": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
                      }
                    }
                  }
                },
                "image_with_text": {
                  "type": "Slice",
                  "fieldset": "Image with Text",
                  "description": "Image with accompanying text",
                  "icon": "image",
                  "display": "list",
                  "non-repeat": {
                    "image": {
                      "type": "Image",
                      "config": {
                        "label": "Image",
                        "constraint": {
                          "width": 800,
                          "height": 600
                        }
                      }
                    },
                    "caption": {
                      "type": "Text",
                      "config": {
                        "label": "Image Caption",
                        "placeholder": "Image description"
                      }
                    },
                    "text": {
                      "type": "StructuredText",
                      "config": {
                        "label": "Text Content",
                        "single": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
                      }
                    },
                    "image_position": {
                      "type": "Select",
                      "config": {
                        "label": "Image Position",
                        "options": [
                          {
                            "value": "left",
                            "label": "Left"
                          },
                          {
                            "value": "right",
                            "label": "Right"
                          },
                          {
                            "value": "top",
                            "label": "Top"
                          },
                          {
                            "value": "bottom",
                            "label": "Bottom"
                          }
                        ],
                        "default_value": "top"
                      }
                    }
                  }
                },
                "step_by_step": {
                  "type": "Slice",
                  "fieldset": "Step by Step",
                  "description": "Step-by-step instructions",
                  "icon": "format_list_numbered",
                  "display": "list",
                  "repeat": {
                    "step_number": {
                      "type": "Number",
                      "config": {
                        "label": "Step Number",
                        "placeholder": "1"
                      }
                    },
                    "step_title": {
                      "type": "Text",
                      "config": {
                        "label": "Step Title",
                        "placeholder": "Step Title"
                      }
                    },
                    "step_content": {
                      "type": "StructuredText",
                      "config": {
                        "label": "Step Content",
                        "single": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
                      }
                    },
                    "step_image": {
                      "type": "Image",
                      "config": {
                        "label": "Step Image",
                        "constraint": {
                          "width": 600,
                          "height": 400
                        }
                      }
                    }
                  }
                },
                "tips_list": {
                  "type": "Slice",
                  "fieldset": "Tips List",
                  "description": "List of tips or best practices",
                  "icon": "lightbulb",
                  "display": "list",
                  "non-repeat": {
                    "title": {
                      "type": "Text",
                      "config": {
                        "label": "Tips Title",
                        "placeholder": "Pro Tips"
                      }
                    }
                  },
                  "repeat": {
                    "tip": {
                      "type": "StructuredText",
                      "config": {
                        "label": "Tip",
                        "single": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
                      }
                    }
                  }
                },
                "warning": {
                  "type": "Slice",
                  "fieldset": "Warning/Important",
                  "description": "Important warning or notice",
                  "icon": "warning",
                  "display": "list",
                  "non-repeat": {
                    "title": {
                      "type": "Text",
                      "config": {
                        "label": "Warning Title",
                        "placeholder": "Important Notice"
                      }
                    },
                    "content": {
                      "type": "StructuredText",
                      "config": {
                        "label": "Warning Content",
                        "single": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
                      }
                    },
                    "type": {
                      "type": "Select",
                      "config": {
                        "label": "Warning Type",
                        "options": [
                          {
                            "value": "warning",
                            "label": "Warning"
                          },
                          {
                            "value": "info",
                            "label": "Information"
                          },
                          {
                            "value": "success",
                            "label": "Success"
                          },
                          {
                            "value": "error",
                            "label": "Error"
                          }
                        ],
                        "default_value": "warning"
                      }
                    }
                  }
                },
                "code_example": {
                  "type": "Slice",
                  "fieldset": "Code Example",
                  "description": "Code snippet or example",
                  "icon": "code",
                  "display": "list",
                  "non-repeat": {
                    "title": {
                      "type": "Text",
                      "config": {
                        "label": "Example Title",
                        "placeholder": "Example Code"
                      }
                    },
                    "code": {
                      "type": "Text",
                      "config": {
                        "label": "Code",
                        "placeholder": "Your code here"
                      }
                    },
                    "language": {
                      "type": "Select",
                      "config": {
                        "label": "Programming Language",
                        "options": [
                          {
                            "value": "javascript",
                            "label": "JavaScript"
                          },
                          {
                            "value": "html",
                            "label": "HTML"
                          },
                          {
                            "value": "css",
                            "label": "CSS"
                          },
                          {
                            "value": "json",
                            "label": "JSON"
                          },
                          {
                            "value": "text",
                            "label": "Text"
                          }
                        ],
                        "default_value": "text"
                      }
                    },
                    "description": {
                      "type": "StructuredText",
                      "config": {
                        "label": "Description",
                        "single": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
                      }
                    }
                  }
                },
                "quote": {
                  "type": "Slice",
                  "fieldset": "Quote",
                  "description": "Pull quote or testimonial",
                  "icon": "format_quote",
                  "display": "list",
                  "non-repeat": {
                    "quote_text": {
                      "type": "Text",
                      "config": {
                        "label": "Quote Text",
                        "placeholder": "Quote text here"
                      }
                    },
                    "attribution": {
                      "type": "Text",
                      "config": {
                        "label": "Attribution",
                        "placeholder": "Author Name"
                      }
                    },
                    "source": {
                      "type": "Text",
                      "config": {
                        "label": "Source",
                        "placeholder": "Company or Title"
                      }
                    }
                  }
                },
                "cta": {
                  "type": "Slice",
                  "fieldset": "Call to Action",
                  "description": "Call to action section",
                  "icon": "call_to_action",
                  "display": "list",
                  "non-repeat": {
                    "title": {
                      "type": "Text",
                      "config": {
                        "label": "CTA Title",
                        "placeholder": "Ready to get started?"
                      }
                    },
                    "subtitle": {
                      "type": "Text",
                      "config": {
                        "label": "CTA Subtitle",
                        "placeholder": "Start creating professional quotes today"
                      }
                    },
                    "button_text": {
                      "type": "Text",
                      "config": {
                        "label": "Button Text",
                        "placeholder": "Create Quote"
                      }
                    },
                    "button_link": {
                      "type": "Text",
                      "config": {
                        "label": "Button Link",
                        "placeholder": "/lav-tilbud"
                      }
                    },
                    "style": {
                      "type": "Select",
                      "config": {
                        "label": "CTA Style",
                        "options": [
                          {
                            "value": "primary",
                            "label": "Primary"
                          },
                          {
                            "value": "secondary",
                            "label": "Secondary"
                          },
                          {
                            "value": "outline",
                            "label": "Outline"
                          }
                        ],
                        "default_value": "primary"
                      }
                    }
                  }
                }
              }
            }
          }
        ]
      }
    },
    {
      "id": "seo_title",
      "name": "SEO Title",
      "type": "Text",
      "config": {
