{
  "id": "testimonial",
  "name": "Testimonial",
  "description": "Customer testimonials and reviews",
  "icon": "format_quote",
  "tabs": [
    {
      "key": "content",
      "displayName": "Content"
    },
    {
      "key": "author",
      "displayName": "Author"
    },
    {
      "key": "settings",
      "displayName": "Settings"
    }
  ],
  "fields": [
    {
      "id": "quote",
      "name": "Quote",
      "type": "StructuredText",
      "config": {
        "label": "Testimonial Quote",
        "single": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
      }
    },
    {
      "id": "author_name",
      "name": "Author Name",
      "type": "Text",
      "config": {
        "label": "Author Name",
        "placeholder": "John Doe"
      }
    },
    {
      "id": "author_title",
      "name": "Author Title",
      "type": "Text",
      "config": {
        "label": "Author Title/Position",
        "placeholder": "CEO, Company Name"
      }
    },
    {
      "id": "author_company",
      "name": "Author Company",
      "type": "Text",
      "config": {
        "label": "Company Name",
        "placeholder": "ABC Construction"
      }
    },
    {
      "id": "author_image",
      "name": "Author Image",
      "type": "Image",
      "config": {
        "label": "Author Photo",
        "constraint": {
          "width": 300,
          "height": 300
        },
        "thumbnails": [
          {
            "name": "thumbnail",
            "width": 150,
            "height": 150
          }
        ]
      }
    },
    {
      "id": "company_logo",
      "name": "Company Logo",
      "type": "Image",
      "config": {
        "label": "Company Logo",
        "constraint": {
          "width": 200,
          "height": 100
        }
      }
    },
    {
      "id": "rating",
      "name": "Rating",
      "type": "Number",
      "config": {
        "label": "Rating (1-5)",
        "placeholder": "5"
      }
    },
    {
      "id": "industry",
      "name": "Industry",
      "type": "Select",
      "config": {
        "label": "Industry",
        "options": [
          {
            "value": "handyman",
            "label": "Handyman"
          },
          {
            "value": "construction",
            "label": "Construction"
          },
          {
            "value": "consulting",
            "label": "Consulting"
          },
          {
            "value": "design",
            "label": "Design"
          },
          {
            "value": "marketing",
            "label": "Marketing"
          },
          {
            "value": "it",
            "label": "IT Services"
          },
          {
            "value": "cleaning",
            "label": "Cleaning"
          },
          {
            "value": "other",
            "label": "Other"
          }
        ]
      }
    },
    {
      "id": "featured",
      "name": "Featured",
      "type": "Boolean",
      "config": {
        "label": "Featured Testimonial",
        "placeholder_false": "Not featured",
        "placeholder_true": "Featured testimonial"
      }
    },
    {
      "id": "status",
      "name": "Status",
      "type": "Select",
      "config": {
        "label": "Publication Status",
        "options": [
          {
            "value": "draft",
            "label": "Draft"
          },
          {
            "value": "published",
            "label": "Published"
          },
          {
            "value": "archived",
            "label": "Archived"
          }
        ],
        "default_value": "draft"
      }
    },
    {
      "id": "date_added",
      "name": "Date Added",
      "type": "Date",
      "config": {
        "label": "Date Added"
      }
    }
  ]
}
