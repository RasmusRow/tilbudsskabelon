{
  "id": "contact_form",
  "name": "Contact Form",
  "description": "Contact form configurations",
  "icon": "contact_mail",
  "tabs": [
    {
      "key": "content",
      "displayName": "Content"
    },
    {
      "key": "fields",
      "displayName": "Form Fields"
    },
    {
      "key": "settings",
      "displayName": "Settings"
    }
  ],
  "fields": [
    {
      "id": "title",
      "name": "Title",
      "type": "Text",
      "config": {
        "label": "Form Title",
        "placeholder": "Contact Us"
      }
    },
    {
      "id": "slug",
      "name": "Slug",
      "type": "UID",
      "config": {
        "label": "URL Slug",
        "placeholder": "contact-us"
      }
    },
    {
      "id": "description",
      "name": "Description",
      "type": "StructuredText",
      "config": {
        "label": "Form Description",
        "single": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
      }
    },
    {
      "id": "form_fields",
      "name": "Form Fields",
      "type": "Group",
      "config": {
        "label": "Form Fields Configuration",
        "repeat": true,
        "fields": [
          {
            "id": "field_name",
            "name": "Field Name",
            "type": "Text",
            "config": {
              "label": "Field Name",
              "placeholder": "Name"
            }
          },
          {
            "id": "field_label",
            "name": "Field Label",
            "type": "Text",
            "config": {
              "label": "Field Label",
              "placeholder": "Your Name"
            }
          },
          {
            "id": "field_type",
            "name": "Field Type",
            "type": "Select",
            "config": {
              "label": "Field Type",
              "options": [
                {
                  "value": "text",
                  "label": "Text"
                },
                {
                  "value": "email",
                  "label": "Email"
                },
                {
                  "value": "tel",
                  "label": "Phone"
                },
                {
                  "value": "textarea",
                  "label": "Textarea"
                },
                {
                  "value": "select",
                  "label": "Select"
                },
                {
                  "value": "checkbox",
                  "label": "Checkbox"
                },
                {
                  "value": "radio",
                  "label": "Radio"
                }
              ],
              "default_value": "text"
            }
          },
          {
            "id": "required",
            "name": "Required",
            "type": "Boolean",
            "config": {
              "label": "Required Field",
              "placeholder_false": "Optional",
              "placeholder_true": "Required"
            }
          },
          {
            "id": "placeholder",
            "name": "Placeholder",
            "type": "Text",
            "config": {
              "label": "Placeholder Text",
              "placeholder": "Enter your name"
            }
          },
          {
            "id": "options",
            "name": "Options",
            "type": "Text",
            "config": {
              "label": "Options (for select/radio/checkbox)",
              "placeholder": "Option 1, Option 2, Option 3"
            }
          },
          {
            "id": "validation",
            "name": "Validation",
            "type": "Text",
            "config": {
              "label": "Validation Rules",
              "placeholder": "min:2,max:50"
            }
          }
        ]
      }
    },
    {
      "id": "submit_button_text",
      "name": "Submit Button Text",
      "type": "Text",
      "config": {
        "label": "Submit Button Text",
        "placeholder": "Send Message"
      }
    },
    {
      "id": "success_message",
      "name": "Success Message",
      "type": "Text",
      "config": {
        "label": "Success Message",
        "placeholder": "Thank you for your message! We'll get back to you soon."
      }
    },
    {
      "id": "error_message",
      "name": "Error Message",
      "type": "Text",
      "config": {
        "label": "Error Message",
        "placeholder": "Sorry, there was an error sending your message. Please try again."
      }
    },
    {
      "id": "email_recipients",
      "name": "Email Recipients",
      "type": "Text",
      "config": {
        "label": "Email Recipients",
        "placeholder": "support@tilbudsskabelon.dk, info@tilbudsskabelon.dk"
      }
    },
    {
      "id": "email_subject",
      "name": "Email Subject",
      "type": "Text",
      "config": {
        "label": "Email Subject",
        "placeholder": "New contact form submission"
      }
    },
    {
      "id": "redirect_url",
      "name": "Redirect URL",
      "type": "Text",
      "config": {
        "label": "Redirect URL after submission",
        "placeholder": "/thank-you"
      }
    },
    {
      "id": "form_type",
      "name": "Form Type",
      "type": "Select",
      "config": {
        "label": "Form Type",
        "options": [
          {
            "value": "contact",
            "label": "Contact Form"
          },
          {
            "value": "support",
            "label": "Support Form"
          },
          {
            "value": "demo",
            "label": "Demo Request"
          },
          {
            "value": "newsletter",
            "label": "Newsletter Signup"
          },
          {
            "value": "custom",
            "label": "Custom Form"
          }
        ],
        "default_value": "contact"
      }
    },
    {
      "id": "captcha_enabled",
      "name": "Captcha Enabled",
      "type": "Boolean",
      "config": {
        "label": "Enable Captcha",
        "placeholder_false": "Disabled",
        "placeholder_true": "Enabled"
      }
    },
    {
      "id": "status",
      "name": "Status",
      "type": "Select",
      "config": {
        "label": "Form Status",
        "options": [
          {
            "value": "active",
            "label": "Active"
          },
          {
            "value": "inactive",
            "label": "Inactive"
          },
          {
            "value": "maintenance",
            "label": "Maintenance"
          }
        ],
        "default_value": "active"
      }
    }
  ]
}
